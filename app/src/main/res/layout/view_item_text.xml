<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl_update_version"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="10dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/item_view_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="?attr/TextTitleColor"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_view_txt_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_txt_name"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="?attr/textSecondaryColor"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_view_txt_new_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/item_view_txt_name"
        android:background="@drawable/shape_new_version"
        android:contentDescription="@string/app_name"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:text="@string/app_new_version"
        android:textColor="?attr/textPrimaryColor"
        android:textSize="12sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/item_view_txt_summary"
        android:layout_marginTop="15dp"
        android:background="@color/setting_line_bg"/>
</RelativeLayout>