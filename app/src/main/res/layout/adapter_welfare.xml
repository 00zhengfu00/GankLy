<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="?attr/baseAdapterItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.gank.gankly.widget.RatioImageView
            android:id="@+id/ri_img"
            android:layout_width="120dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/item_default_img"/>

        <RelativeLayout
            android:id="@+id/goods_rl_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/ri_img"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_txt_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:text="sssss"
                android:textColor="@color/book_item_name"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/goods_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/goods_txt_time"
                android:drawablePadding="5dp"
                android:drawableStart="?attr/androidItemTimeIcon"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="?attr/textSecondaryColor"
                android:textSize="14sp"
                tools:text="就这样啊"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/goods_rl_data"
            android:layout_below="@id/goods_rl_data"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="?attr/baseAdapterItemTextColor"
            android:textSize="16sp"
            tools:text="1111"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>