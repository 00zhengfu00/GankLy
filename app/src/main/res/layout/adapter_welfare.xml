<?xml version="1.0" encoding="utf-8"?>
<com.gank.gankly.widget.LYRelativeLayoutRipple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welfare_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="?attr/lyItemSelectBackground"
    android:orientation="horizontal"
    android:elevation="1dp"
    android:padding="16dp">

    <com.gank.gankly.widget.RatioImageView
        android:id="@+id/adapter_ios_ratio_img_head"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/item_default_img"/>

    <RelativeLayout
        android:id="@+id/goods_rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/adapter_ios_ratio_img_head"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_txt_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/book_item_name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/goods_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/goods_txt_time"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="?attr/textSecondaryColor"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/goods_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/goods_rl_data"
        android:layout_below="@id/goods_rl_data"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="?attr/baseAdapterItemTextColor"
        android:textSize="16sp"/>

</com.gank.gankly.widget.LYRelativeLayoutRipple>
