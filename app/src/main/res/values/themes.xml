<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--白天-->
    <style name="AppTheme.Day" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="themeTabLayoutBackground">@color/colorPrimary</item>
        <item name="textPrimaryColor">@color/text_default</item>
        <item name="textSecondaryColor">@color/text_666666</item>
        <item name="baseAdapterItemBackground">@color/white</item>
        <item name="baseAdapterItemTextColor">@color/body_text_1</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Setting-->
        <item name="themeSettingBackground">@color/white</item>
    </style>

    <style name="AppTheme.Day.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--夜晚-->
    <style name="AppTheme.Night" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="themeTabLayoutBackground">@color/dark_colorPrimary</item>
        <item name="colorControlActivated">@color/material_blue_grey_900</item>
        <item name="colorControlNormal">@color/material_blue_grey_900</item>
        <item name="textPrimaryColor">@color/text_primary_dark</item>
        <item name="textSecondaryColor">@color/text_secondary_dark</item>
        <item name="baseAdapterItemBackground">@color/base_adapter_item_background</item>
        <item name="baseAdapterItemTextColor">#fff5f5f5</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Setting-->
        <item name="themeSettingBackground">@color/dark_background</item>

    </style>

    <style name="AppTheme.Night.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>